<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:TodoFirebase" x:Class="TodoFirebase.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="ButtonColor">Navy</Color>
            <Color x:Key="TextColor">White</Color>
            <LayoutOptions x:Key="horzOptions" Alignment="Center" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <Label Text="Taskmaster - 2019" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <Button
                Text="Manage Tasks"
                Clicked="OnStartButtonClicked"
                HorizontalOptions="{StaticResource horzOptions}"
                VerticalOptions="CenterAndExpand"
                TextColor="{StaticResource TextColor}" 
                BackgroundColor="{StaticResource ButtonColor}"/>
    </StackLayout>
</ContentPage>